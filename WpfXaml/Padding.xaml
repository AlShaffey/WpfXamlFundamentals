<Window x:Class="WpfXaml.Padding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="Padding" Height="700" Width="300"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <StackPanel>
                <Button>No</Button>
                <Button Padding="70">Uniform</Button>
                <Button Padding="50, 30">Left Top</Button>
                <Button Padding="10, 70, 50, 30">Left Top Right Buttom</Button>
            </StackPanel>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            Multiple padding configurations.
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
