<Window x:Class="WpfXaml.Designers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="Designers" Height="300" Width="300"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <Grid>
                <Button x:Name="MyButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="101,110,0,0" Click="button_Click"/>

            </Grid>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            <TextBlock Text="Assigning an event handler to button click, and change button text when clicked." TextWrapping="WrapWithOverflow"></TextBlock>
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
