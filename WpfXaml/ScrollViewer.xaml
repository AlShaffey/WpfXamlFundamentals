<Window x:Class="WpfXaml.ScrollViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="ScrollViewer" Height="300" Width="500"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <ScrollViewer Height="170" Width="170" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <Image Source="D:\IMG_14022017_143927.png" ></Image>
            </ScrollViewer>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            <StackPanel>
                <TextBlock>A scrollviewer of fixed size, with auto-scrolling configurations.</TextBlock>
                <TextBlock>Contains an image that requires more space than the scrollviewer has.</TextBlock>
            </StackPanel>
        </m:MasterControl.Description>
    </m:MasterControl>
