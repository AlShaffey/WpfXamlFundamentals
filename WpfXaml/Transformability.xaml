<Window x:Class="WpfXaml.Transformability"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="Transformability" Height="300" Width="300"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <ComboBox Height="35" Width="100" VerticalAlignment="Center">
                <ComboBox.RenderTransform>
                    <RotateTransform Angle="30"></RotateTransform>
                </ComboBox.RenderTransform>
                <TextBlock Text="Item 1"></TextBlock>
                <TextBlock Text="Item 2"></TextBlock>
                <TextBlock Text="Item 3"></TextBlock>
                <TextBlock Text="Item 4"></TextBlock>
                <TextBlock Text="Item 5"></TextBlock>
                <TextBlock Text="Item 6"></TextBlock>
                <TextBlock Text="Item 7"></TextBlock>
            </ComboBox>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            <StackPanel>
                <TextBlock>A combo box with rotate transform applied.</TextBlock>
            </StackPanel>
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
