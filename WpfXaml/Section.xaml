<Window x:Class="WpfXaml.Section"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="Section" Height="450" Width="800"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <FlowDocument>
                <Section x:Name="section1">
                    <Paragraph>Section 1, Paragraph 1.</Paragraph>
                    <Paragraph>Section 1, Paragraph 2.</Paragraph>
                </Section>
                <Section x:Name="section2">
                    <Paragraph>Section 2, Paragraph 1.</Paragraph>
                    <Paragraph>Section 2, Paragraph 2.</Paragraph>
                </Section>
            </FlowDocument>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            <StackPanel>
                <TextBlock>The window contains 2 sections.</TextBlock>
                <TextBlock>Each section has 2 paragraphs.</TextBlock>
            </StackPanel>
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
