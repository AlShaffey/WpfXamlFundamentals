<Window x:Class="WpfXaml.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="Canvas" Height="300" Width="500"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <Canvas>
                <Ellipse Canvas.Left="7" Canvas.Top="7" Height="7" Width="14" Fill="Orange"></Ellipse>
                <TextBlock Canvas.Left="14" Canvas.Top="14" Text="m.2"></TextBlock>
            </Canvas>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            <TextBlock>Just a canvas with 2 controls (ellipse and textblock) drawn at left and top points.</TextBlock>
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
