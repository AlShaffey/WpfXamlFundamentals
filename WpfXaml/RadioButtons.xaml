<Window x:Class="WpfXaml.RadioButtons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="RadioButtons" Height="300" Width="300">
    <StackPanel Orientation="Horizontal">
        <GroupBox Margin="10" Header="Alph">
        <StackPanel >
            <RadioButton x:Name="radioButton" Content="A" GroupName="A1"/>
                <RadioButton x:Name="radioButton1" Content="B" GroupName="A1"/>
                <RadioButton x:Name="radioButton2" Content="C" IsChecked="True" GroupName="A1"/>

            </StackPanel>
        </GroupBox>
        <GroupBox Margin="10" Header="Numeric">
            <StackPanel >
                <RadioButton x:Name="radioButton3" Content="1" GroupName="A1"/>
                <RadioButton x:Name="radioButton4" Content="2" GroupName="A1"/>
                <RadioButton x:Name="radioButton5" Content="3" GroupName="A1"/>

            </StackPanel>
        </GroupBox>

    </StackPanel>
</Window>
