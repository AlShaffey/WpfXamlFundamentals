<Window x:Class="WpfXaml.Margin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="Margin" Height="500" Width="300"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <StackPanel>
                <Button BorderBrush="Black">No</Button>
                <Button Margin="70" BorderBrush="Black">Uniform</Button>
                <Button Margin="50, 30" BorderBrush="Black">Left TOP</Button>
                <Button Margin="10, 70, 50, 30" BorderBrush="Black">Left TOP Right Buttom</Button>
            </StackPanel>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            Button with Margin(s).
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
