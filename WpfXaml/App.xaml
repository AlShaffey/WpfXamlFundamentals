<Application x:Class="WpfXaml.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfXaml"
             StartupUri="Default.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ButtonTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="OrangeBrush" Color="OrangeRed"/>
            <SolidColorBrush x:Key="RedBrush" Color="DarkRed"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
