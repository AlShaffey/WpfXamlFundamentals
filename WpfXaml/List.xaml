<Window x:Class="WpfXaml.List"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXaml"
        mc:Ignorable="d"
        Title="List" Height="450" Width="800"
        xmlns:m="clr-namespace:WpfXaml.Masters">
    <m:MasterControl>
        <m:MasterControl.Content>
            <FlowDocument>
                <List MarkerStyle="Box">
                    <ListItem>
                        <Paragraph>First</Paragraph>
                    </ListItem>
                    <ListItem>
                        <Paragraph>Second</Paragraph>
                    </ListItem>
                </List>
            </FlowDocument>
        </m:MasterControl.Content>
        <m:MasterControl.Description>
            <StackPanel>
                <TextBlock>A flow document contains a list.</TextBlock>
                <TextBlock>The list is a bulleted of squares of 2 list items.</TextBlock>
            </StackPanel>
        </m:MasterControl.Description>
    </m:MasterControl>
</Window>
